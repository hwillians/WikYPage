@model WikY.Models.Article

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.Hidden("Id", 0)
        @Html.AntiForgeryToken()

        <div>
            @Html.LabelFor(a => a.Auteur, null, new { @class = "form-label" })
            @Html.EditorFor(a => a.Auteur, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.Auteur, null, new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(a => a.Theme, null, new { @class = "form-label" })
            @Html.EditorFor(a => a.Theme, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.Theme, null, new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(a => a.Contenu, null, new { @class = "form-label" })
            @Html.EditorFor(a => a.Contenu, new { htmlAttributes = new { rows = "6", value = "text", @class = "form-control" } })
            @Html.ValidationMessageFor(a => a.Contenu, null, new { @class = "text-danger" })
        </div>
        <input type="submit" value="Valider" />
    }
</div>
