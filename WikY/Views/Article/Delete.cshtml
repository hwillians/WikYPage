@model WikY.Models.Article

@{
    ViewBag.Title = "WikY - Suppression " + @Model.Theme;
}

<div class="card">
    <div class="card-header">
        <p>Theme : <strong>@Model.Theme</strong> </p>
    </div>
    <div class="card-body">
        <h5 class="card-title">Auteur : @Model.Auteur</h5>
        <blockquote class="blockquote mb-0">
            <p class="card-text">@Model.Contenu.Substring(0, Model.Contenu.Length < 300 ? Model.Contenu.Length : 300)</p>
            <footer class="blockquote-footer">  @Model.DateCreation</footer>
        </blockquote>
    </div>
</div>

<h5 class="text-danger">
    Vous êtes sur le point de supprimer l'article, êtes vous sur de vouloir continuer ?
</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Oui" class="btn btn-danger" />
    @Html.ActionLink("Non", "GetArticles", "Article", null, new { @class = "btn btn-primary" })
}


